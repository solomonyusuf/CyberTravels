@model CyberTravels.Models.Flight

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Booking Flights</h2>

<h4>Flight 1 of 3</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Roundtrip" class="control-label">Round Trip</label>
                <input asp-for="Roundtrip"  type="checkbox" />
               
            </div>
            <div class="form-group">
                <label asp-for="Onway" class="control-label">Onway/partial</label>
                <input id="checkbox" asp-for="Onway" type="checkbox"  />
                
            </div>
            <div class="form-group">
                <label asp-for="From" class="control-label">From</label>
                <input asp-for="From" class="form-control" />
                <span asp-validation-for="From" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Depatures" class="control-label">Departures</label>
                <input asp-for="Depatures" type="datetime-local" />
                
            </div>
            <div class="form-group">
                <label asp-for="Return" class="control-label"></label>
                <input asp-for="Return" type="datetime-local" />
                
            </div>
            <div class="form-group">
                <label asp-for="Adults" class="control-label">Adults</label>
                <input asp-for="Adults" class="form-control" />
                <span asp-validation-for="Adults" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Childs" class="control-label">Childs</label>
                <input asp-for="Childs" class="form-control" />
                <span asp-validation-for="Childs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="To" class="control-label">To</label>
                <input asp-for="To" class="form-control" />
                <span asp-validation-for="To" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class" class="control-label">Class</label>
                <input asp-for="Class" placeholder="A or B or C" class="form-control" />
                <span asp-validation-for="Class" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="book-btn" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
